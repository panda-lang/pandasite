main
html
  height 100%

#app
body
  height 100%
  min-height 100%

.error
  height 100%
  width 100%

  background #fff
  display flex
  justify-content center
  align-items center

  letter-spacing 1px
  font-size 1.2em
  font-family monospace

// Typography
html
  font-size 112.5%
  line-height 1.56em

body
  font-weight 400
  font-family 'Source Sans Pro', sans-serif
  word-wrap break-word
  color hsla(#000, .7)
p
  margin-bottom 1.56rem

h1
  @extends p
  color hsla(#000, .85)
  font-family Source Sans Pro, sans-serif
  font-weight 200
  text-rendering optimizeLegibility
  font-size 2rem
  line-height 2.34rem

h2
  @extends h1
  font-size 1.51572rem

h3
  @extends h1
  font-size 1.31951rem
  line-height 1.56rem

h4
  @extends h3
  font-size 1rem

h5
  @extends h3
  font-size 0.87055rem

h6
  @extends h3
  font-size 0.81225rem


a
  color color-primary
  text-decoration none

  &:hover
    color color-alt
    text-decoration underline

  &.router-link-active
    color color-alt

strong
  font-weight 700

small
  font-size 80%

ul
ol
  margin _ _ 1.56rem 1.56rem

  > li
    margin _ _ 1.56rem / 2

pre
kbd
code
  background color-alt
  border-radius 3px
  padding 0.2rem _

  font-family Consolas, Roboto Mono, Liberation Mono, Menlo, Courier, monospace
  font-size 0.85rem
  line-height 1.56rem

pre
  padding 1.56rem

blockquote
  margin _ 1.56rem 1.56rem _
  padding _ _ 1.17rem
  font-size 1.1487rem
  line-height 1.56rem
  color hsla(#000, .6)
  border-left 0.39rem solid hsla(#000, .13)
